<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-center mb-4">ğŸ† Achievements</h1>
    
    <!-- Achievement Stats -->
    <div class="stats shadow w-full mb-8">
      <div class="stat">
        <div class="stat-figure text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="stat-title">Earned</div>
        <div class="stat-value text-primary"><%= @stats.earned_achievements %></div>
        <div class="stat-desc">out of <%= @stats.total_achievements %> total</div>
      </div>
      
      <div class="stat">
        <div class="stat-figure text-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4"></path>
          </svg>
        </div>
        <div class="stat-title">Completion</div>
        <div class="stat-value text-secondary"><%= @stats.completion_percentage %>%</div>
        <div class="stat-desc">achievement progress</div>
      </div>
      
      <div class="stat">
        <div class="stat-figure text-accent">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
          </svg>
        </div>
        <div class="stat-title">Total Points</div>
        <div class="stat-value text-accent"><%= @stats.total_points %></div>
        <div class="stat-desc">achievement points</div>
      </div>
    </div>
  </div>

  <!-- Achievement Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <%= for achievement <- @achievements do %>
      <% earned = MapSet.member?(@earned_achievement_ids, achievement.id) %>
      <div class={[
        "card bg-base-100 shadow-xl",
        if(earned, do: "border-2 border-success", else: "opacity-75")
      ]}>
        <div class="card-body">
          <div class="flex items-center justify-between mb-2">
            <div class="text-2xl">
              <%= if achievement.icon do %>
                <%= achievement.icon %>
              <% else %>
                ğŸ†
              <% end %>
            </div>
            <%= if earned do %>
              <div class="badge badge-success">âœ“ Earned</div>
            <% else %>
              <div class="badge badge-ghost">Locked</div>
            <% end %>
          </div>
          
          <h2 class="card-title text-lg">
            <%= achievement.name %>
            <%= if achievement.points > 0 do %>
              <div class="badge badge-primary"><%= achievement.points %>pts</div>
            <% end %>
          </h2>
          
          <p class="text-sm opacity-75 mb-2">
            <%= achievement.description %>
          </p>
          
          <div class="flex justify-between items-center">
            <div class="badge badge-outline">
              <%= String.capitalize(achievement.category) %>
            </div>
            
            <%= if earned do %>
              <% {user_achievement, _} = Enum.find(@user_achievements, fn {_ua, a} -> a.id == achievement.id end) %>
              <div class="text-xs opacity-60">
                Earned <%= Calendar.strftime(user_achievement.earned_at, "%m/%d/%y") %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= if length(@achievements) == 0 do %>
    <div class="text-center py-12">
      <div class="text-6xl mb-4">ğŸ†</div>
      <h2 class="text-2xl font-bold mb-2">No Achievements Yet</h2>
      <p class="text-gray-600">Achievements will appear here as they're added to the game.</p>
    </div>
  <% end %>
</div>
