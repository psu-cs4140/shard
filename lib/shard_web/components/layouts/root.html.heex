<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="Shard" suffix=" Â· Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (function() {
        var setTheme = function(theme) {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", function(e) {
          if (e.key === "phx:theme") {
            setTheme(e.newValue || "system");
          }
        });
        
        window.addEventListener("phx:set-theme", function(e) {
          var theme = e.target.dataset.phxTheme;
          setTheme(theme);
          
          // Update the toggle slider position
          var slider = document.getElementById("theme-toggle-slider");
          if (slider) {
            if (theme === "system") {
              slider.style.transform = "translateX(-2.25px)";
            } else if (theme === "light") {
              slider.style.transform = "translateX(22.75px)";
            } else if (theme === "dark") {
              slider.style.transform = "translateX(47.75px)";
            }
          }
        });
        
        // Initialize slider position on page load
        document.addEventListener("DOMContentLoaded", function() {
          var currentTheme = localStorage.getItem("phx:theme") || "system";
          var slider = document.getElementById("theme-toggle-slider");
          if (slider) {
            if (currentTheme === "system") {
              slider.style.transform = "translateX(-2.25px)";
            } else if (currentTheme === "light") {
              slider.style.transform = "translateX(22.75px)";
            } else if (currentTheme === "dark") {
              slider.style.transform = "translateX(47.75px)";
            }
          }
        });
      })();
    </script>
  </head>
  <body>
    <div class="w-full relative z-10 flex items-center justify-between px-4 sm:px-6 lg:px-8">
      <div class="flex-shrink-0">
        <.link href={~p"/"} class="btn btn-ghost text-lg font-semibold">
          Home
        </.link>
      </div>
      <ul class="menu menu-horizontal flex items-center gap-4">
        <li>
          <div class="card relative flex flex-row items-center border-2 border-base-300 bg-base-300 rounded-full w-24 h-8">
            <div class="absolute w-7 h-6 rounded-full border-1 border-base-200 bg-base-100 brightness-110 transition-transform duration-300 ease-in-out transform translate-x-0" id="theme-toggle-slider"></div>
            
            <button
              class="flex p-1 cursor-pointer w-1/3 justify-center"
              phx-click={JS.dispatch("phx:set-theme")}
              data-phx-theme="system"
            >
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2h-2.22l.123.489.804.804A1 1 0 0113 18H7a1 1 0 01-.707-1.707l.804-.804L7.22 15H5a2 2 0 01-2-2V5zm5.771 7H5V5h10v7H8.771z" clip-rule="evenodd"></path>
              </svg>
            </button>
            
            <button
              class="flex p-1 cursor-pointer w-1/3 justify-center"
              phx-click={JS.dispatch("phx:set-theme")}
              data-phx-theme="light"
            >
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
              </svg>
            </button>
            
            <button
              class="flex p-1 cursor-pointer w-1/3 justify-center"
              phx-click={JS.dispatch("phx:set-theme")}
              data-phx-theme="dark"
            >
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
              </svg>
            </button>
          </div>
        </li>
        <%= if @current_scope do %>
          <li>
            <span class="text-sm">{@current_scope.user.email}</span>
          </li>
          <%= if @current_scope.user.admin do %>
            <li>
              <.link href={~p"/admin"}>Admin</.link>
            </li>
          <% end %>
          <li>
            <.link href={~p"/users/settings"}>Settings</.link>
          </li>
          <li>
            <.link href={~p"/users/log-out"} method="delete">Log out</.link>
          </li>
        <% else %>
          <li>
            <.link href={~p"/users/register"}>Register</.link>
          </li>
          <li>
            <.link href={~p"/users/log-in"}>Log in</.link>
          </li>
        <% end %>
      </ul>
    </div>
    {@inner_content}
  </body>
</html>
