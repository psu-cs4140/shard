<div class="grid lg:grid-cols-3 gap-8">
  <!-- Character Creation Panel -->
  <div class="lg:col-span-1">
    <div class="card bg-base-200 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-primary">
          <span class="hero-user-plus w-6 h-6"></span>
          Create Your Character
        </h2>
        <form class="space-y-4">
          <div class="form-control">
            <label class="label">
              <span class="label-text">Character Name</span>
            </label>
            <input type="text" placeholder="Enter your hero's name" class="input input-bordered mud-command-input" />
          </div>
          
          <div class="form-control">
            <label class="label">
              <span class="label-text">Choose Your Class</span>
            </label>
            <select class="select select-bordered">
              <option disabled selected>Select a class</option>
              <option>âš”ï¸ Warrior - Master of combat</option>
              <option>ğŸ§™ Mage - Wielder of arcane arts</option>
              <option>ğŸ¹ Ranger - Swift and deadly</option>
              <option>ğŸ›¡ï¸ Paladin - Holy protector</option>
              <option>ğŸ—¡ï¸ Rogue - Shadow and stealth</option>
            </select>
          </div>
          
          <div class="form-control">
            <label class="label">
              <span class="label-text">Starting Realm</span>
            </label>
            <div class="space-y-2">
              <%= for realm <- @realms do %>
                <label class="label cursor-pointer justify-start gap-3">
                  <input type="radio" name="realm" class="radio radio-primary" />
                  <div class="flex-1">
                    <div class="flex items-center justify-between">
                      <span class="font-medium"><%= realm.name %></span>
                      <div class={[
                        "badge",
                        if(realm.status == :online, do: "badge-success", else: "badge-warning")
                      ]}>
                        <%= realm.players %> players
                      </div>
                    </div>
                  </div>
                </label>
              <% end %>
            </div>
          </div>
          
          <div class="card-actions justify-end">
            <button class="btn btn-primary btn-block">
              ğŸš€ Begin Your Adventure
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Game Terminal -->
  <div class="lg:col-span-2">
    <div class="card bg-base-200 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-primary">
          <span class="hero-computer-desktop w-6 h-6"></span>
          Game Terminal
        </h2>
        
        <!-- Terminal Output -->
        <div id="game-terminal" class="mud-terminal" phx-hook="GameOutput">
          <div class="text-success">Welcome to the Federated Multi-User Dungeon!</div>
          <div class="text-base-content/70">Type 'help' for a list of commands.</div>
          <br/>
          <div class="text-info">ğŸŒŸ Recent Federation Events:</div>
          <%= for event <- @recent_events do %>
            <div class="text-base-content/80">â€¢ <%= event %></div>
          <% end %>
          <br/>
          <div class="text-warning">âš¡ Available Commands:</div>
          <div class="text-base-content/80">â€¢ look - Examine your surroundings</div>
          <div class="text-base-content/80">â€¢ who - See who's online across realms</div>
          <div class="text-base-content/80">â€¢ realms - List connected realms</div>
          <div class="text-base-content/80">â€¢ say [message] - Speak to nearby players</div>
          <div class="text-base-content/80">â€¢ tell [player] [message] - Private message</div>
          <div class="text-base-content/80">â€¢ travel [realm] - Journey to another realm</div>
          <br/>
          <div class="text-primary">Ready for your command, adventurer...</div>
        </div>
        
        <!-- Command Input -->
        <div class="form-control mt-4">
          <div class="input-group">
            <span class="text-primary font-mono">></span>
            <input 
              id="command-input"
              type="text" 
              placeholder="Enter your command..." 
              class="input input-bordered flex-1 mud-command-input"
              phx-hook="CommandInput"
            />
            <button class="btn btn-primary">Execute</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Federation Status Dashboard -->
<div class="mt-8">
  <div class="card bg-base-200 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-primary">
        <span class="hero-globe-alt w-6 h-6"></span>
        Federation Network Status
      </h2>
      
      <div class="grid md:grid-cols-3 gap-4">
        <%= for realm <- @realms do %>
          <div class={[
            "card bg-base-100 shadow",
            if(realm.status == :online, do: "realm-connected", else: "realm-disconnected")
          ]}>
            <div class="card-body compact">
              <h3 class="card-title text-sm"><%= realm.name %></h3>
              <div class="flex justify-between items-center">
                <span class="text-sm opacity-70"><%= realm.players %> adventurers</span>
                <div class={[
                  "badge badge-sm",
                  if(realm.status == :online, do: "badge-success", else: "badge-warning")
                ]}>
                  <%= if realm.status == :online, do: "Online", else: "Syncing" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="divider">Quick Stats</div>
      
      <div class="stats stats-vertical lg:stats-horizontal shadow">
        <div class="stat">
          <div class="stat-title">Total Players</div>
          <div class="stat-value text-primary"><%= Enum.sum(Enum.map(@realms, & &1.players)) %></div>
          <div class="stat-desc">Across all realms</div>
        </div>
        
        <div class="stat">
          <div class="stat-title">Active Realms</div>
          <div class="stat-value text-secondary"><%= Enum.count(@realms, & &1.status == :online) %></div>
          <div class="stat-desc">Connected to federation</div>
        </div>
        
        <div class="stat">
          <div class="stat-title">Network Status</div>
          <div class="stat-value text-success">Stable</div>
          <div class="stat-desc">All systems operational</div>
        </div>
      </div>
    </div>
  </div>
</div>

